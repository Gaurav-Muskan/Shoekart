<mvc:View controllerName="com.projects.shoekart.controller.Details"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content>
            <SplitApp id="SplitAppDemo" initialDetail="detail" initialMaster="master">
                <detailPages>
                    <Page id="detail" title="Formal Shoes">
                        <VBox>
                            <HBox>
                                <VBox class="vbox">
                                    <Image src="../images/oxford.jpg" class="imgcd"/>
                                    <Text text="Oxford" class="txtcd"></Text>
                                    <Text text="Price: ₹1000" class="txtcd1"></Text>
                                </VBox>
                                <VBox class="vbox">
                                    <Image src="../images/derby.jpg" class="imgcd"/>
                                    <Text text="Derby" class="txtcd"></Text>
                                    <Text text="Price: ₹3000" class="txtcd1"></Text>
                                </VBox>
                                <VBox class="vbox">
                                    <Image src="../images/brogues.jpg" class="imgcd"/>
                                    <Text text="Brogues" class="txtcd"></Text>
                                    <Text text="Price: ₹2500" class="txtcd1"></Text>
                                </VBox>
                            </HBox>
                            <HBox>
                                <VBox class="vbox">
                                    <Image src="../images/chelsea.jpg" class="imgcd"/>
                                    <Text text="Chelsea" class="txtcd"></Text>
                                    <Text text="Price: ₹1200" class="txtcd1"></Text>
                                </VBox>
                                <VBox class="vbox">
                                    <Image src="../images/loafer.jpg" class="imgcd"/>
                                    <Text text="Loafers" class="txtcd"></Text>
                                    <Text text="Price: ₹1500" class="txtcd1"></Text>
                                </VBox>
                                <VBox class="vbox">
                                    <Image src="../images/captoe.jpg" class="imgcd"/>
                                    <Text text="Cap-Toe" class="txtcd"></Text>
                                    <Text text="Price: ₹800" class="txtcd1"></Text>
                                </VBox>
                            </HBox>
                        </VBox>
                    </Page>
                    <Page id="detail1" title="Casual Shoes">
                        <VBox>
                            <HBox>
                                <VBox class="vbox">
                                    <Image src="../images/trainer.jpg" class="imgcd"/>
